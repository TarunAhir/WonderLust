        <a class="nav-link me-2 mt-2" href="/listings/new">Create List On Airbnb</a>

        <% if(!currUser){ %>
          <button class="btn btn-outline-warning me-2">
            <b><a class="nav-link" href="/signup">SignUp</a></b>
          </button>
          <button class="btn btn-outline-warning me-2">
            <b><a class="nav-link" href="/login">LogIn</a></b>
          </button>
