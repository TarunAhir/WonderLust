<% layout("/layout/boilerplate") %>

<body>
    

    <div class="row mt-4 ">
        <div class="col-8 offset-2">
            
         
              <div class="card col-6 offset-2 show-card ">
                <h3> Listing Detail</h3>
                        <img src="<%=listing.image.url%>" class="card-img-top mb-3 mt-2 show-image" alt="listing_image">
                        <div class="card-body">
                            <p class="card-text">
                               <b><%=listing.title%></b><br>
                                 <%=listing.description%> <br>  
                                  &#8377; <%=listing.price.toLocaleString("en-IN")%> <br>
                                   <%=listing.location%> <br>
                                   <%=listing.country%> 
                                  
                            </p>
                        </div>
                </div>

           <div class="btns mb-5">
                <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark ebtn col-1 offset-2">Edit</a>
       
                <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                        <!--  method post but request DELETE override -->
                        <button class="btn btn-dark dbtn offset-3 ">Delete</button>
               </form>
           </div>  
           
        </div>
    </div>
    </body>