<% layout("/layout/boilerplate") %>


    <div class="row mt-3">
        <h1 class="col-8 offset-2">Login on Wanderlust</h1>
        <div class="col-8 offset-2">
            <br>
            <form action="/login" method="POST" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" id="username" placeholder="" type="text" class="form-control" required />
                    
                </div>

                 <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" id="email" placeholder="" type="text" class="form-control" required />
                </div>
            <button class="btn btn-outline-success">Login</button>

            </form>
        </div>
    </div>